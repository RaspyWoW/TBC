LogSQL = 1

#
#    PidFile
#        World daemon PID file.

PidFile = ""

#
#    LogLevel
#        Server console level of logging.
#        0 = Minimum; 1 = Basic&Error; 2 = Detail; 3 = Full/Debug

LogLevel = 1

#
#    LogTime
#        Include time in server console output [hh:mm:ss].

LogTime = 0

#
#    LogFile
#        Logfile name.

LogFile = "server.log"

#
#    PacketLogFile
#        Binary packet logging file for the world server.
#        Filename extension must be .pkt to be parsable with WPP.

PacketLogFile = ""

#
#    LogTimestamp
#        Logfile with timestamp of server start in name.

LogTimestamp = 0

#
#    LogFileLevel
#        Server file level of logging.

LogFileLevel = 1

