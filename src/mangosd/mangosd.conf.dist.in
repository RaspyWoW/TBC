#############################
# MaNGOS Configuration file #
#############################

[MangosdConf]
ConfVersion=2021021901

###################################################################################################################
# CONNECTIONS AND DIRECTORIES
#
#    RealmID
#        RealmID has to match the realm ID inside the authentication database.

RealmID = 2

#
#    DataDir
#        DataDir has to contain maps, vmaps, mmaps, dbc. DataDir needs to be in quotes.

DataDir = "."

#
#    LogsDir
#        If this string is empty, no logs will be stored.

LogsDir = ""

#
#    LoginDatabaseInfo
#    WorldDatabaseInfo
#    CharacterDatabaseInfo
#    LogsDatabaseInfo
#        Database connection settings for the world server.

LoginDatabaseInfo     = "127.0.0.1;3306;user;password;auth"
WorldDatabaseInfo     = "127.0.0.1;3306;user;password;world"
CharacterDatabaseInfo = "127.0.0.1;3306;user;password;chars"
LogsDatabaseInfo      = "127.0.0.1;3306;user;password;logs"

#
#    LoginDatabaseConnections
#    WorldDatabaseConnections
#    CharacterDatabaseConnections
#    LogsDatabaseConnections
#        Amount of connections to database which will be used for SELECT queries. Maximum 16 connections per database.

LoginDatabaseConnections = 1
WorldDatabaseConnections = 1
CharacterDatabaseConnections = 1
LogsDatabaseConnections = 1

#
#    MaxPingTime
#        Database ping interval. (Minutes)

MaxPingTime = 30

#
#    WorldServerPort

WorldServerPort = 8085

#
#    BindIP
#        Bind World Server to a certain IP-Address.
#        This option is useful for running multiple mangosd or realmd instances on different IP addresses using default ports.

BindIP = "0.0.0.0"

#
#    SD2ErrorLogFile
#        Log File for SD2-Errors.

SD2ErrorLogFile = "SD2Errors.log"

#
###################################################################################################################
# PERFORMANCE SETTINGS
#
#    UseProcessors
#        Used processors mask for multi-processors system. (Used only at Windows)

UseProcessors = 0

#
#    ProcessPriority
#        Process priority setting. (Used only at Windows)

ProcessPriority = 0

#
#    Compression
#        Compression level for update packages sent to client. (1 - 9)

Compression = 1

#
#    PlayerLimit
#        Initial realm capacity. (Excluding Account lvl > 1)

PlayerLimit = 0

#
#    SaveRespawnTimeImmediately
#        Save respawn time for creatures on death and for gameobjects at use.

SaveRespawnTimeImmediately = 1

#
#    MaxOverspeedPings
#        Maximum overspeed ping count before player kick. (2 is minimum, 0 to disable check)

MaxOverspeedPings = 2

#
#    GridUnload
#        Unload unused terrain.
#        If you have lot memory, you can disable it to speed up loading time if a player moves to new grids.

GridUnload = 0

#
#    LoadAllGridsOnMaps
#        Load grids of maps at server startup (if you have lot memory you can try it to have a living world always loaded).
#        This also allow ALL creatures on the given maps to update their grid without any player around.

LoadAllGridsOnMaps = ""

#
#    Autoload.Active
#        Load active creatures that have ExtraFlags CREATURE_EXTRA_FLAG_ACTIVE or movementType WAYPOINT_MOTION_TYPE.
#        This will allow creatures having these conditions to update their grid without any player around. Useful for running in debug mode.

Autoload.Active = 1

#
#    GridCleanUpDelay
#        Grid clean up delay. (Milliseconds)

GridCleanUpDelay = 300000

#
#    MapUpdateInterval
#        Map update interval. (Milliseconds)

MapUpdateInterval = 100

#
#    ChangeWeatherInterval
#        Weather update interval. (Milliseconds)

ChangeWeatherInterval = 600000

#
#    PlayerSave.Interval
#        Player save interval. (Milliseconds)

PlayerSave.Interval = 900000

#
#    PlayerSave.Stats.MinLevel
#        Minimum level for saving character stats for external usage in database.

PlayerSave.Stats.MinLevel = 0

#
#    PlayerSave.Stats.SaveOnlyOnLogout
#        Save character stats only on logout.

PlayerSave.Stats.SaveOnlyOnLogout = 1

#
#    vmap.enableLOS
#    vmap.enableHeight
#        VMaps support for line of sight and height calculation.

vmap.enableLOS = 1
vmap.enableHeight = 1

#
#    vmap.enableIndoorCheck
#        VMap based indoor checks to remove outdoor-only auras (mounts etc.).

vmap.enableIndoorCheck = 1

#
#    DetectPosCollision
#        Check final move position, summon position, etc for visible collision with other objects and walls.
#        (Walls only if vmaps are enabled.)

DetectPosCollision = 1

#
#    mmap.enabled
#        Enable/Disable pathfinding using mmaps

mmap.enabled = 1

#
#    mmap.ignoreMapIds
#        Disable mmap pathfinding on the listed maps.
#        List of map ids with delimiter ','

mmap.ignoreMapIds = ""

#
#    PathFinder.OptimizePath
#        Use or not path finder path optimization (cut calculated points).

PathFinder.OptimizePath = 1

#
#    PathFinder.NormalizeZ
#        Correct calculated path points Z (height). Increase CPU usage, but fix Z accuracy.

PathFinder.NormalizeZ = 1

#
#    UpdateUptimeInterval
#        Update realm uptime period. (Minutes)
#        (Needs to be > 0)

UpdateUptimeInterval = 10

#
#    MapUpdate.Threads
#        Number of threads to use for maps update.

MapUpdate.Threads = 3

#
#    MaxCoreStuckTime
#        Periodically check if the process got freezed. If this is the case force crash after the specified amount of seconds.

MaxCoreStuckTime = 0

#
#    AddonChannel
#        Use of the addon channel through the server.
#        (Some client side addons can stop work correctly with disabled addon channel.)

AddonChannel = 1

#
#    CleanCharacterDB
#        Perform character db cleanups on start up.

CleanCharacterDB = 1

#
#
#    MaxWhoListReturns
#        Set the max number of players returned in the /who list and interface (0 means unlimited).

MaxWhoListReturns = 49

#
#    AccountData
#        Set 1 if you want account data saving to DB.

AccountData = 0

#
###################################################################################################################
# SERVER LOGGING
#
#    LogSQL
#        Enable logging of GM commands. All SQL code will be written to a log file.
#        All commands are written to a file: YYYY-MM-DD_logSQL.sql .
